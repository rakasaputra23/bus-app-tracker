<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header dengan handle -->
        <View
            android:layout_width="48dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="#BDBDBD"
            android:alpha="0.5" />

        <!-- Bus Info Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPlateNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AE 7788 UP"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/tvBusClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eksekutif"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- ===== TOMBOL VIEW TOGGLE ===== -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToggleView"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Full Route"
                android:textSize="12sp"
                app:icon="@android:drawable/ic_menu_mapmode"
                app:iconSize="18dp"
                app:cornerRadius="20dp"
                app:strokeColor="#2196F3"
                app:iconTint="#2196F3"
                android:textColor="#2196F3" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Bus Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Route -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_directions"
                    android:tint="#757575" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rute: "
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/tvRoute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Madiun - Surabaya"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

            </LinearLayout>

            <!-- Driver -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:tint="#757575" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver: "
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/tvDriver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Herman Felani"
                    android:textSize="13sp"
                    android:textColor="#212121" />

            </LinearLayout>

            <!-- Speed -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_compass"
                    android:tint="#757575" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kecepatan: "
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="92 km/jam"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

            </LinearLayout>

            <!-- Occupancy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_agenda"
                    android:tint="#757575" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kursi Tersedia: "
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/tvOccupancy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6 dari 40 kursi"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#F57C00" />

            </LinearLayout>

            <!-- ETA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    android:tint="#757575" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimasi Sampai Dalam: "
                    android:textSize="13sp"
                    android:textColor="#757575"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/tvETA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15 menit"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>